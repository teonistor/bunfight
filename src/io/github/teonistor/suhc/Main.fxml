<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.teonistor.suhc.Controller">
  <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="401.0" />
    <ColumnConstraints hgrow="NEVER" maxWidth="300.0" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="NEVER" maxWidth="300.0" minWidth="10.0" prefWidth="199.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
      <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
    <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
      <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <Pane fx:id="photoFrame" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowSpan="5" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="photos" onMouseClicked="#photoChangeTrigger" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowSpan="2" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
         </children>
      </Pane>
      <Text fx:id="nameT" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Your name:   " GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </Text>
      <Text fx:id="emailT" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Email or Uni Username:   " GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
         <font>
            <Font size="14.0" />
         </font>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </Text>
      <Button fx:id="register" defaultButton="true" graphicTextGap="3.0" mnemonicParsing="false" onAction="#onButtonRegister" prefWidth="95.0" style="-fx-text-fill: white; -fx-background-color: #344556;" text="Register" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <TextField fx:id="name" promptText="e.g. John Doe" style="-fx-background-color: #222222; -fx-text-inner-color: white;" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="email" promptText="e.g. ab3g17" style="-fx-background-color: #222222; -fx-text-inner-color: white;" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Text fx:id="prompt" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Register for mailing list:" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Text>
      <Pane fx:id="quotesFrame" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
   </children>
</GridPane>
